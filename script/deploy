#!/bin/sh

# ssh into webserver as app user
ssh  app@172.31.22.181 <<EOF
  echo *** cd to app directory
  cd /var/www/nodes/jawademo
  echo *** pull changes from master branch
  git pull
  echo *** run npm install to get updated modules
  npm install --production
  echo *** restart app
  pm2 restart jawademo
  exit
EOF